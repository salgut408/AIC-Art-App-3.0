<?xml version="1.0" encoding="utf-8"?>

<!--id's used for the menu & navigation-->




<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.android.aicartapp.ui.home.HomeBreakingArtFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_breaking_art" >
        <action
            android:id="@+id/action_navigation_home_to_artworkDetailFragment"
            app:destination="@id/artworkDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.android.aicartapp.ui.search.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_artworkDetailFragment"
            app:destination="@id/artworkDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.android.aicartapp.ui.favorites.FavoritesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_navigation_favorites_to_artworkDetailFragment"
            app:destination="@id/artworkDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/artworkDetailFragment"
        android:name="com.example.android.aicartapp.ui.artworkDetail.ArtworkDetailFragment"
        android:label="fragment_artwork_detail"
        tools:layout="@layout/fragment_artwork_detail" />
</navigation>